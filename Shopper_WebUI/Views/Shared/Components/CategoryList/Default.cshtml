@model CategoryListViewModel

<div class="list-group">
    <ul class="list-group">
        @foreach (var item in Model.Categories)
        {
            <a 
                asp-controller="Shop"
                asp-action="List"
                asp-route-category="@item.Name.ToLower()"                
                class="list-group-item @(Model.SelectedCategory==item.Name.ToLower()?"active":"")">
                @item.Name
            </a>
        }
    </ul>
</div>
