@model CategoryListModel
@{
    ViewData["Title"] = "CategoryList";
}

<h1>Admin Categories</h1>
<hr />
@if (Model.Categories.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col" style="width:150px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td>@item.Id</td>                  
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="/admin/categories/@item.Id">Edit</a>
                        <form action="/admin/deletecategory" method="post" style="display:inline">
                            <input type="hidden" value="@item.Id" name="categoryId" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>

                    </td>
                </tr>
            }


        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h4>No Category</h4>
    </div>
}

